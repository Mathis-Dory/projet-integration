<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/main_title"
        style="@style/main_title_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/main_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="54dp" />

    <TextView
        android:id="@+id/password_title"
        style="@style/subtitles_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="203dp"
        android:layout_marginStart="265dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="225dp"
        android:drawableLeft="@drawable/ic_user_icon"
        android:drawableStart="@drawable/ic_user_icon"
        android:drawablePadding="15dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/subtitle_password"
        style="@style/subtitles_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/password_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="241dp"
        android:layout_marginTop="313dp"
        android:layout_marginStart="241dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword"
        android:maxLength="30"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="335dp"
        android:drawableLeft="@drawable/ic_password_icon"
        android:drawableStart="@drawable/ic_password_icon"
        android:drawablePadding="15dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:autofillHints="aliment name"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_password_icon"
        android:drawableLeft="@drawable/ic_password_icon"
        android:inputType="textPassword"
        android:maxLength="30"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="445dp"
        android:drawablePadding="15dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/subtitle_confirm_password"
        style="@style/subtitles_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="423dp"
        android:layout_marginStart="123dp" />

    <TextView
        android:id="@+id/email_title"
        style="@style/subtitles_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="533dp"
        android:layout_marginStart="298dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_mail_icon"
        android:drawableLeft="@drawable/ic_mail_icon"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="555dp"
        android:drawablePadding="15dp"
        android:layout_marginStart="30dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_inscription_button"
        android:text="@string/inscription"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="684dp"
        android:layout_marginStart="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>