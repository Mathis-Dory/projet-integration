<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom navigation bar -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/arial</item>
    </style>

    <!-- Page title -->
    <style name="pageTitle">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Product pop-up -->
    <style name="popup_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popup_subtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popup_default">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- product list font -->
    <style name="product_list">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Add of a style for the content of the home card view -->
    <!-- For the percentage and degree -->
    <style name="PoliceHomeCardView">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- For the main title of each card view -->
    <style name="MainTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- For the subtitles of each card view -> degree and temperature -->
    <style name="Subtitles">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Form Add Page  -->
    <!--Spinner Background-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>

    </style>

    <!-- Main title of the page sign up -->
    <style name="main_title_sign_up_page">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkGreen</item>

    </style>

    <!-- Confirm title of the page sign up -->
    <style name="subtitles_sign_up_page">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGreen</item>

    </style>

    <!-- Terms of signing up -->
    <style name="terms_link_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Strings for how to connect page -->
    <!-- Main title -->
    <style name="main_title_how_to_connect">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="normal_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="it_must">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>